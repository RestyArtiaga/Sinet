<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" 
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        >

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#CECCCC"
            android:padding="1dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:tag="0" >

                <ImageView
                    android:id="@+id/siisIMG"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/siis" />

                <TextView
                    android:id="@+id/siisTXT"
                    style="@style/ImageTitle"
                    android:layout_alignParentLeft="true"
                    android:text="@string/siis" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:tag="1" >

                <ImageView
                    android:id="@+id/confIMG"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/conf" />

                <TextView
                    android:id="@+id/confTXT"
                    style="@style/ImageTitle"
                    android:layout_alignParentLeft="true"
                    android:text="@string/conf" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:tag="2" >

                <ImageView
                    android:id="@+id/indusIMG"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ind" />

                <TextView
                    android:id="@+id/indusIMG"
                    style="@style/ImageTitle"
                    android:layout_alignParentLeft="true"
                    android:text="@string/indus" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:tag="3" >

                <ImageView
                    android:id="@+id/prodIMG"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prod" />

                <TextView
                    android:id="@+id/prodIMG"
                    style="@style/ImageTitle"
                    android:layout_alignParentLeft="true"
                    android:text="@string/prod" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:tag="4" >

                <ImageView
                    android:id="@+id/bestPrIMG"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bestpr" />

                <TextView
                    android:id="@+id/bestPrIMG"
                    style="@style/ImageTitle"
                    android:layout_alignParentLeft="true"
                    android:text="@string/bestpr" />
            </RelativeLayout>
        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/conferencesIMGTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_conferencestrainingsandevents" />

            <ImageView
                android:id="@+id/industryNewsIMGTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_industrynews" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/productsIMGTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_products" />

            <ImageView
                android:id="@+id/bestPracticesIMGTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bestpractices" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>